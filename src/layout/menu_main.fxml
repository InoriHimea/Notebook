<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.image.*?>
<?import javafx.scene.image.ImageView?>

<MenuBar xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.MenuBarPresenter">
  <menus>
    <Menu mnemonicParsing="false" text=" 文件">
      <items>
	        <MenuItem fx:id="menu_new" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 新建">
				<graphic><ImageView fitHeight="20.0" fitWidth="20.0"><image><Image url="images/blue/new.png" /></image></ImageView></graphic>
				<accelerator> <!-- 快捷键 -->
				   <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
			   </accelerator>
	        </MenuItem>
            <MenuItem fx:id="menu_open" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 打开">
				<graphic><ImageView fitHeight="20.0" fitWidth="20.0"><image><Image url="images/blue/open.png" /></image></ImageView></graphic>
            </MenuItem>

            <SeparatorMenuItem mnemonicParsing="false" /> <!-- 分割线 -->
            <MenuItem fx:id="menu_exit" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 退出软件" >
            	<graphic><ImageView fitHeight="20.0" fitWidth="20.0"><image><Image url="images/blue/exit.png" /></image></ImageView></graphic>
            </MenuItem>
      </items>
    </Menu>
      <Menu mnemonicParsing="false" text=" 工具">
         <items>
            <MenuItem fx:id="menu_preference" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 偏好设置">
            	<graphic><ImageView fitHeight="20.0" fitWidth="20.0"><image><Image url="images/blue/setting.png" /></image></ImageView></graphic>
            </MenuItem>
         </items>
      </Menu>
    <Menu mnemonicParsing="false" text=" 帮助">
      <items>
	       <MenuItem fx:id="menu_about" onAction="#onMenuOnclick"  mnemonicParsing="false" text=" 关于软件  ">
	           	<graphic><ImageView fitHeight="20.0" fitWidth="20.0"><image><Image url="images/blue/about.png" /></image></ImageView></graphic>
	       </MenuItem>
            <MenuItem fx:id="menu_instruct" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 使用说明 " />
            <MenuItem fx:id="menu_feedback" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 提交反馈 " />
            <MenuItem fx:id="menu_check_update" onAction="#onMenuOnclick" mnemonicParsing="false" text=" 检查更新 ">
            	<graphic><ImageView fitHeight="20.0" fitWidth="20.0"><image><Image url="images/blue/update.png" /></image></ImageView></graphic>
            </MenuItem>
      </items>
    </Menu>
  </menus>
</MenuBar>
